@model IEnumerable<AssessoriaWeb.Models.PlanoAlimentar>

@{
    ViewBag.Title = "Lista de Plano Alimentares";
}

<h2>Lista de Plano Alimentares</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success create glyphicon glyphicon-plus" })
</p>
<table class="table">
    <tr>
        <th>
            Atleta
        </th>
        <th>
            Nutricionista
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pln_datainicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pln_datafinal)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.pla_plano)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Atleta.Pessoa.pes_nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nutricionista.Pessoa.pes_nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pln_datainicial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pln_datafinal)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.pla_plano)
        </td>*@
    <td>
        @Html.ActionLink(" ", "Details", new { id = item.pln_id }, new { @class = "btn btn-success details glyphicon glyphicon-search" })
        @Html.ActionLink(" ", "Delete", new { id = item.pln_id }, new { @class = "btn btn-danger delete glyphicon glyphicon-trash" })
        @Html.ActionLink(" ", "Edit", new { id = item.pln_id }, new { @class = "btn btn-primary edit glyphicon glyphicon-edit" })
    </td>
    </tr>
}

</table>
