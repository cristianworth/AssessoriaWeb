@model IEnumerable<AssessoriaWeb.Models.Turma>

@{
    ViewBag.Title = "Lista de Turmas";
}

<h2>Lista de Turmas</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", null, new { @class = "btn btn-success create glyphicon glyphicon-plus" })
</p>
<table class="table">
    <tr>
        <th>
            Assessor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trm_descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trm_observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trm_HoraInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trm_HoraFinal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Assessor.Pessoa.pes_nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trm_descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trm_observacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trm_HoraInicial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trm_HoraFinal)
        </td>
        <td>
            @Html.ActionLink(" ", "Details", new { id = item.trm_id }, new { @class = "btn btn-success details glyphicon glyphicon-search" })
            @Html.ActionLink(" ", "Delete", new { id = item.trm_id }, new { @class = "btn btn-danger delete glyphicon glyphicon-trash" })
            @Html.ActionLink(" ", "Edit", new { id = item.trm_id }, new { @class = "btn btn-primary edit glyphicon glyphicon-edit" })
        </td>
    </tr>
}

</table>
