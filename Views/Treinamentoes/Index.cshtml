@model IEnumerable<AssessoriaWeb.Models.Treinamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Atleta
        </th>
        <th>
            Assessor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tre_descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tre_data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tre_hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tre_valor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Atleta.Pessoa.pes_nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assessor.Pessoa.pes_nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tre_descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tre_data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tre_hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tre_valor)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.tre_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.tre_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.tre_id })
            </td>
        </tr>
    }

</table>
